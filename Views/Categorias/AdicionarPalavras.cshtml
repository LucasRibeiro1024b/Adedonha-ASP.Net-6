@model AdedonhaMVC.ViewsModel.CategoriaViewModel

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Adicionar palavras a categoria <b>"@Html.DisplayFor(model => model.Descricao)"</b></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Página Inicial</a></li>
                    <li class="breadcrumb-item"><a href="/Categorias/Index">Categorias</a></li>
                    <li class="breadcrumb-item active">Adicionar Palavras</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content" style="margin:16px;">
    <div class="row">
        <div class="col-3">
            <div class="card card-light">
                <div class="card-header">
                    <h3 class="card-title">Adicionar palavras:</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" id="tabela1" name="table-filter1" class="form-control float-right" placeholder="Search">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body table-responsive p-0" style="height: 600px;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width: 80%">Descrição</th>
                                <th style="width: 20%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.PalavrasDisponiveis)
                            {
                                <form asp-action="SalvarPalavras">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <tr>
                                        <td class="table-filter1">@item.Descricao</td>
                                        <td class="text-right py-0 align-middle">
                                            <input type="hidden" asp-for="IdPalavra" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger"><i class="fas fa-plus"></i></button>
                                        </td>
                                    </tr>
                                </form>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-5">
            <div class="card card-light">
                <div class="card-header">
                    <h3 class="card-title">A categoria <b>"@Html.DisplayFor(model => model.Descricao)"</b> possui as palavras:</h3>

                    <div class="card-tools">
                        <div class="input-group input-group-sm" style="width: 150px;">
                            <input type="text" id="tabela2" name="table-filter2" class="form-control float-right" placeholder="Procurar">

                            <div class="input-group-append">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body table-responsive p-0" style="height: 600px;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th style="width: 80%">
                                    Descrição
                                </th>
                                <th style="width: 20%">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Palavras)
                            {
                                <form asp-action="RemoverPalavras">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
