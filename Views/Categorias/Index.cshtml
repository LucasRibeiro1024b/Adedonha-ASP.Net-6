@model IEnumerable<AdedonhaMVC.Models.Categoria>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lista de Categorias</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home/Index">Página Inicial</a></li>
                    <li class="breadcrumb-item active">Categorias</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="card card-light" style="margin:16px;">
    <div class="card-header">
        <h3 class="card-title">Categorias</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped projects" id="tabela">
            <thead>
                <tr class="text-lg">
                    <th style="width: 20%">
                        Descrição
                    </th>
                    <th style="width: 20%">
                        Total de Palavras
                    </th>
                    <th style="width: 60%">
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </a>
                        </td>
                        <td>
                            <a>
                                @Html.DisplayFor(modelItem => item.TotalPalavras)
                            </a>
                        </td>
                        <td class="project-actions text-right">
                            <a class="btn btn-light btn-sm" asp-action="Letras" asp-route-id="@item.Id">
                                <i class="fas fa-folder">
                                </i>
                                Letras
                            </a>
                            <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="fas fa-pencil-alt">
                                </i>
                                Editar
                            </a>
                            <a class="btn btn-success btn-sm" asp-action="AdicionarPalavras" asp-route-id="@item.Id">
                                <i class="fas fa-star">
                                </i>
                                Adicionar Palavras
                            </a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="fas fa-trash">
                                </i>
                                Deletar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



